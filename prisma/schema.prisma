generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // simple local database
  url      = "file:./dev.db"
}

model User {
  id       String   @id @default(cuid())
  email    String   @unique
  password String
  balance  Float    @default(10000) // start each user with $10,000
  trades   Trade[]
  holdings Holding[]
}

model Holding {
  id     String  @id @default(cuid())
  user   User    @relation(fields: [userId], references: [id])
  userId String
  coin   String
  amount Float   @default(0)
}

model Trade {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  coin      String
  amount    Float
  usdValue  Float
  type      String   // "buy" or "sell"
  createdAt DateTime @default(now())
}
